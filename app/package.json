{
  "name": "app",
  "version": "0.1.0",
  "repository": "git@github.com:Shroom-Kingdom/app.git",
  "author": "Mario Reder <mario.reder@pm.me>",
  "license": "MIT",
  "scripts": {
    "start": "yarn clean && yarn --cwd src-wasm/app build:dev && run-p serve watch",
    "start:prod": "yarn clean && yarn --cwd src-wasm/app build:dev && run-p serve:prod watch:prod",
    "serve": "webpack serve --host 0.0.0.0 --env=dev",
    "serve:prod": "webpack serve --host 0.0.0.0 --env=prod --node-env production",
    "build": "yarn clean && yarn --cwd src-wasm/app build && webpack --env=prod --node-env production",
    "watch": "yarn --cwd src-wasm/app watch",
    "watch:prod": "yarn --cwd src-wasm/app watch:prod",
    "deploy": "gh-pages --dist dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf ./dist && yarn --cwd src-wasm/app clean"
  },
  "dependencies": {
    "@tarnadas/near-api-js": "1.1.3",
    "borsh": "^0.7",
    "detect-browser": "^5",
    "svelte": "^3",
    "ts-pattern": "^4"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/plugin-syntax-dynamic-import": "^7",
    "@babel/plugin-transform-typescript": "^7",
    "@babel/polyfill": "^7",
    "@babel/preset-env": "^7",
    "autoprefixer": "^10",
    "babel-loader": "^9",
    "copy-webpack-plugin": "^11",
    "core-js": "3",
    "css-loader": "^6",
    "css-minimizer-webpack-plugin": "^4",
    "eslint-plugin-svelte3": "^4",
    "file-loader": "^6",
    "html-webpack-plugin": "^5",
    "mini-css-extract-plugin": "^2",
    "node-polyfill-webpack-plugin": "^2",
    "npm-run-all": "^4",
    "postcss": "^8",
    "postcss-loader": "^7",
    "prettier-plugin-svelte": "^2",
    "sass": "^1",
    "sass-loader": "^13",
    "svelte-check": "^2",
    "svelte-loader": "^3",
    "svelte-preprocess": "^5",
    "webpack": "^5",
    "webpack-bundle-analyzer": "^4",
    "webpack-cli": "^5",
    "webpack-dev-server": "^4"
  }
}
