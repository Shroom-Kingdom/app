{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext", "dom", "webworker"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["api/**/*", "app/**/*", "common-types/**/*"],
  "exclude": ["node_modules", "dist"]
}
